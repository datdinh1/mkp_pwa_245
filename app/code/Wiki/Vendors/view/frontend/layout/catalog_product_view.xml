<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Wiki_Vendors::css/vendor.css"/>
    </head>
    <body>
		<referenceContainer name="product.info.main">
			<container name="vendor.profile.container" htmlTag="div" htmlClass="vendor-profile-container">
				<container name="vendor.profile.logo.container" htmlTag="div" htmlClass="col-xs-3 vendor-profile-logo">
					<block class="Wiki\Vendors\Block\Profile\Logo" name="vendor.profile.logo" template="Wiki_Vendors::profile/logo.phtml" />
				</container>
				<container name="vendor.profile.description.container" htmlTag="div" htmlClass="col-xs-8 vendor-profile-description">
					<block class="Wiki\Vendors\Block\Profile\Title" name="vendor.profile.title" template="Wiki_Vendors::profile/title.phtml" />
					<block class="Wiki\Vendors\Block\Profile\Description" name="vendor.profile.description" template="Wiki_Vendors::profile/description.phtml" />
					<container name="vendor.profile.address.container" htmlTag="p" htmlClass="vendor-info">
			    		<block class="Wiki\Vendors\Block\Profile\Address" name="vendor.profile.address" template="Wiki_Vendors::profile/address.phtml" />
			    	</container>
			    	<container name="vendor.profile.sales_joindate.container" htmlTag="p" htmlClass="vendor-info">
			    		<block class="Wiki\Vendors\Block\Profile\Sales" name="vendor.profile.sales" template="Wiki_Vendors::profile/sales.phtml" />
			    		<block class="Wiki\Vendors\Block\Profile\JoinedDate" name="vendor.profile.join_date" template="Wiki_Vendors::profile/joined_date.phtml" />
			    	</container>
			    	<container name="vendor.profile.phone_opentime.container" htmlTag="p" htmlClass="vendor-info">
			    		<block class="Wiki\Vendors\Block\Profile\Phone" name="vendor.profile.phone" template="Wiki_Vendors::profile/phone.phtml" />
			    		<block class="Wiki\Vendors\Block\Profile\OpenTime" name="vendor.profile.opentime" template="Wiki_Vendors::profile/open_time.phtml" />
			    	</container>
				</container>
		    </container>
		</referenceContainer>
    </body>
</page>
