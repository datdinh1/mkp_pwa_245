<script type="text/javascript">
require([
    "jquery",
    "domReady!"
], function($){
	
	function checkBoxChange(checkbox){
		if($(checkbox).attr("checked")){
    		$('#Wiki_credit_refund_input').removeAttr("disabled");
        }else{
        	$('#Wiki_credit_refund_input').attr("disabled","disabled");
        	
        }
	}
	
    $("#Wiki_refund_credit").change(function(){
    	checkBoxChange(this);
    });

    checkBoxChange($("#Wiki_refund_credit"));
    
});
</script>