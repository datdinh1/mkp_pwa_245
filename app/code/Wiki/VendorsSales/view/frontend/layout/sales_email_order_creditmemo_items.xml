<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Email Creditmemo Items List" design_abstraction="custom">
    <update handle="sales_email_order_creditmemo_renderers"/>
    <update handle="sales_email_item_price"/>
    <body>
        <block class="Wiki\VendorsSales\Block\Order\Email\Creditmemo\Items" name="items" template="Wiki_VendorsSales::email/creditmemo/items.phtml">
            <block class="Magento\Framework\View\Element\RendererList" name="ves.sales.email.order.creditmemo.renderers" as="renderer.list"/>
            <block class="Wiki\VendorsSales\Block\Order\Creditmemo\Totals" name="creditmemo_totals" template="Wiki_VendorsSales::order/totals.phtml" cacheable="false">
                <arguments>
                    <argument name="label_properties" xsi:type="string">colspan="2"</argument>
                </arguments>
                <block class="Magento\Tax\Block\Sales\Order\Tax" name="tax" template="Wiki_VendorsSales::order/tax.phtml"/>
            </block>
        </block>
        <block class="Magento\Framework\View\Element\Template" name="additional.product.info" template="Magento_Theme::template.phtml"/>
    </body>
</page>
